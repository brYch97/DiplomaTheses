<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <control
    namespace="Sample"
    constructor="Slider"
    version="0.0.1"
    display-name-key="Sample slider component"
    description-key="Sample slider component to demonstrate basic PCF features."
    control-type="standard">
    <property name="step"
      display-name-key="Step"
      description-key="Decides by how much the value gets changed when user moves the slider."
      of-type-group="numbers"
      usage="input"
      default-value="1"
      required="false" />
    <resources>
      <code path="index.ts" order="1" />
    </resources>
    <type-group name="numbers">
      <type>Decimal</type>
      <type>Whole.None</type>
    </type-group>
  </control>
</manifest>